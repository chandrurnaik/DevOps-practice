pipeline {
    agent any
    environment {
       FIRST_NAME = "chandru"
    }
    stages {
        stage ('BUILD') {
            steps {
                script {
                    echo "${env.FIRST_NAME}"
                    sh 'sleep 2'
                }
            }
        }
        stage ('TEST') {
            steps {
                script {
                    echo "updating env"
                    env.FIRST_NAME="chandru_r_naik"
                    sh 'sleep 3'
                }
            }
        }
        stage ('DEPLOY') {
            steps {
                script {
                    echo "${env.FIRST_NAME}"
                    sh 'sleep 2'
                } 
            }
        }
    }
}