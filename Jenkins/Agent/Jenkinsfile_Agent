pipeline {
    agent any
    environment {
       FIRST_NAME = "chandru"
    }
    stages {
        stage ('BUILD') {
            steps {
                script {
                    echo "${env.FIRST_NAME}"
                    sh 'sleep 2'
                }
            }
        }
        stage ('TEST') {
            steps {
                sh 'sleep 3'
            }
        }
        stage ('DEPLOY') {
            steps {
               sh 'sleep 2' 
            }
        }
    }
}