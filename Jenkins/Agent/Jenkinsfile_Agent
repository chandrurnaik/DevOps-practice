boolean stageResult = true
pipeline {
    agent none
    environment {
        BUILD_NAME = "test"
    }
    stages {
        stage ('BUILD') {
            agent {
                label 'master'
            }
            steps {
                script {
                    try {
                        echo "${env.BUILD_NAME} environment"
                        sh 'sleep 1'
                    } catch (Exception e) {
                        stageResult = false
                    }
                }
            }
        }
        stage ('TEST') {
            agent any
            steps {
                script {
                    if (stageResult == true) {
                        echo Stage 1 is success so executing stage 2
                        env.BUILD_NAME = "deploy"
                        sh 'sleep 1'
                    } 
                }
            }
        }
        stage ('DEPLOY') {
            agent {
                label 'slave2'
            }
            steps {
                script {
                    if (stageResult == false) {
                        echo stage 1 is failed so executing stage 3
                        echo "${env.BUILD_NAME}" 
                        sh 'sleep 1'
                    }
                }
            }
        }
    }
}