pipeline {
    environment {
        BUILD_NAME = "test"
    }
    stages {
        stage ('BUILD') {
            steps {
                script {
                    echo "${env.BUILD_NAME} environment"
                    sh 'sleep 1'
                }
            }
        }
        stage ('TEST') {
            steps {
                script {
                    env.BUILD_NAME = "deploy"
                    sh 'sleep 1'
                }
            }
        }
        stage ('DEPLOY') {
            steps {
                script {
                    echo "${env.BUILD_NAME}" 
                    sh 'sleep 1'
                }
            }
        }
    }
}